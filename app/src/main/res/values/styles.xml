<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->

    </style>

    <!-- style for forempost key-->
    <style name="first_key_style_key">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginTop">100dp</item>

        <!-- custom drwable file-->
        <item name="android:background">@drawable/pressed_and_normal</item>

        <item name="android:stateListAnimator">@null</item>

    </style>

    <style name="common_key_style_key">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginTop">100dp</item>

        <!-- custom drwable file-->
        <item name="android:background">@drawable/pressed_and_normal</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>


    </style>

    !-- for text3-->
    <style name="style_for_Textviewkey3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:capitalize">characters</item>
        <item name="android:keyTextSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">250dp</item>
        <item name="android:layout_alignBottom">@+id/p7</item>
    </style>

    !-- for text4-->
    <style name="style_for_Textviewkey4">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:capitalize">characters</item>
        <item name="android:keyTextSize">20sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">250dp</item>
        <item name="android:layout_alignBottom">@+id/p7</item>
    </style>

    <style name="black_piano_key">
        <item name="android:layout_height">110dp</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_marginTop">100dp</item>
        <!-- Custom drawable file -->
        <item name="background">@drawable/black_piano_key_selector</item>
        <item name="android:layout_marginLeft">-14dp</item>
    </style>
    
